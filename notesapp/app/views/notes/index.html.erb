<div class="container">
    <div class="row">

        <div class="col-lg-12">
            <h1 class="page-header">
                My Notes
                <span style="font-size: 50%;">
                    <%= link_to '+ Add a note', new_note_path %>
                </span>
            </h1>
        </div>

        <% @notes.each do |note| %>
            <div class="col-lg-3 col-md-4 col-xs-6 thumb note">
                <a class="thumbnail" href="#">
                    <h2><%= note.title %></h2>
                    <p class="created_at">Updated at: <%= note.updated_at %></p>
                    <p><%= note.note %></p>      
                </a>
            </div>
        <% end %>
    </div>
</div>